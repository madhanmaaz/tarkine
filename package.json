{
  "name": "tarkine",
  "version": "0.0.9",
  "description": "tarkine - template engine for nodeJS.",
  "main": "dist/index.js",
  "browser": "dist/browser.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madhanmaaz/tarkine"
  },
  "author": {
    "name": "madhanmaaz",
    "url": "http://madhanmaaz.netlify.app/"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:node": "esbuild src/index.js --outfile=dist/index.js --platform=node --bundle --minify",
    "build:browser": "esbuild src/browser.js --outfile=dist/browser.js --platform=browser --global-name=tarkine --bundle --minify",
    "build": "npm run build:node && npm run build:browser"
  },
  "keywords": [
    "tarkine template engine",
    "tarkine template",
    "tarkine",
    "template",
    "engine",
    "html",
    "rendering",
    "express"
  ],
  "license": "MIT"
}